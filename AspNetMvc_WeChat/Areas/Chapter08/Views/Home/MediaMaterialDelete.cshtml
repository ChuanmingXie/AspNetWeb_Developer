
@{
    ViewBag.Title = "【例8-09】删除永久素材 - Chapter08";
}
<div class="jumbotron">
    <h2>【例8-09】删除永久素材</h2>
</div>

<div class="jumbotron">
    @ViewBag.deleteResult
    @using (Html.BeginForm("MediaMaterialDelete", "Home", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-5">
                <div class="input-group">
                    <div class="input-group-btn">
                        <h5>Media_id:&nbsp;&nbsp;&nbsp;</h5>
                    </div>
                    <div class="input-group-btn" style="width:260px">
                        @Html.TextBox("media_id", null, new { @class = "form-control" })
                    </div>
                    <div class="input-group-btn">
                        <input type="submit" name="deleteMaterial" id="deleteMaterial" value="删除" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("返回列表","Index")
</div>