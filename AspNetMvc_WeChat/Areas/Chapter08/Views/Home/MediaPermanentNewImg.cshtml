
@{
    ViewBag.Title = "【例8-5】新增永久图文素材 - Chapter08";
}

<div class="jumbotron">
    <h2>【例8-5】新增永久图文素材</h2>
</div>
<div class="jumbotron">
    @ViewBag.uploadImgUrl
    <br />
    @using (Html.BeginForm("MediaPermanentNewImg", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("选择永久图文素材", new { @class = "label-control col-md-2" })
                <div class="col-md-3">
                    <input type="file" name="uploadFile" id="upLoadFile" class="form-control-file" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-md-offset-2">
                    <input type="submit" name="uploadSubmit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("返回列表", "index")
</div>