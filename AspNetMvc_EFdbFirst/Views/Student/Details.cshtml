@model AspNetMvc_EFdbFirst.Models.Student

@{
    ViewBag.Title = "学生详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>学生详情</h2>

<div>
    <h4>学生</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd>@Html.DisplayFor(model => model.FullName)</dd>

        @*<dt>@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>

        <dt>@Html.DisplayNameFor(model => model.MiddleName)</dt>
        <dd>@Html.DisplayFor(model => model.MiddleName)</dd>*@

        <dt>@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
        <dd>@Html.DisplayFor(model => model.EnrollmentDate)</dd>
    </dl>

    <table class="table">
        <tr>
            <th>课程名</th>
            <th>分数</th>
            <th>学分</th>
        </tr>
        @foreach (var item in Model.Enrollment)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Course.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                <td>@Html.DisplayFor(modelItem => item.Course.Credits)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("修改", "Edit", new { id = Model.StudentID }) |
    @Html.ActionLink("返回列表", "Index")
</p>
