@model IEnumerable<AspNetMvc_EFdbFirst.Models.Course>

@{
    ViewBag.Title = "课程列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>课程列表</h2>

<p>
    @Html.ActionLink("添加新项", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Title)</th>
        <th>@Html.DisplayNameFor(model => model.Credits)th>
        <th>操作</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Title)</td>
        <td>@Html.DisplayFor(modelItem => item.Credits)</td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.CourseID }) |
            @Html.ActionLink("详细", "Details", new { id=item.CourseID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.CourseID })
        </td>
    </tr>
}

</table>
